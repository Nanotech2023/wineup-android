<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vineConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_30"
    android:layout_margin="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/leftConstraint"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/leftImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff55AA"
            android:contentDescription="@string/left_image_description"
            android:layout_marginBottom="36dp">
        </ImageView>
        <TextView
            android:id="@+id/expertAssessmentText"
            android:text="@string/expert_assessment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftImage"
            android:textColor="#000"
            android:textSize="12sp">
        </TextView>
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/expertAssessmentText"
            android:numStars="5"
            android:rating="4">
        </RatingBar>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/productName"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="ProductName"
        app:layout_constraintBottom_toTopOf="@+id/productDescription"
        app:layout_constraintStart_toEndOf="@+id/leftConstraint"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="ProductVolume"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/leftConstraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.504" />

    <TextView
        android:id="@+id/productRelevance"
        android:layout_width="137dp"
        android:layout_height="16dp"
        android:layout_marginStart="252dp"
        android:text="ProductRelevance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <TextView
        android:id="@+id/oldPrice"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginStart="270dp"
        android:text="OldPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <TextView
        android:id="@+id/discount"
        android:layout_width="59dp"
        android:layout_height="16dp"
        android:layout_marginStart="330dp"
        android:text="Discount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.784" />

    <TextView
        android:id="@+id/newPrice"
        android:layout_width="60dp"
        android:layout_height="18dp"
        android:layout_marginStart="270dp"
        android:text="NewPrice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="ProductDescription"
        app:layout_constraintBottom_toTopOf="@+id/productVolume"
        app:layout_constraintStart_toEndOf="@+id/leftConstraint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/toFavorites"
        android:layout_width="44dp"
        android:layout_height="38dp"
        android:layout_marginStart="344dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.074"
        app:srcCompat="@drawable/grey_heart" />

    <ImageView
        android:id="@+id/trademark"
        android:layout_width="112dp"
        android:layout_height="25dp"
        android:layout_marginStart="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934"
        app:srcCompat="@drawable/brand" />



</androidx.constraintlayout.widget.ConstraintLayout>