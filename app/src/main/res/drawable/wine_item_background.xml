<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="4dp"
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerY="60%"
                android:startColor="#000000"
                android:centerColor="#8D000000"
                android:endColor="#00FFFFFF">
            </gradient>
            <corners
                android:radius="25dp"/>
        </shape>
    </item>
    <item
        android:left="18dp"
        android:right="18dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerY="92%"
                android:startColor="#000000"
                android:centerColor="#8D000000"
                android:endColor="#00FFFFFF">
            </gradient>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="14dp"
        android:right="14dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerX="60%"
                android:angle="-90"
                android:startColor="#000000"
                android:centerColor="#75000000"
                android:endColor="#FFFFFF">
            </gradient>
            <corners
                android:radius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>
</layer-list>