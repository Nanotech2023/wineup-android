<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerY="90%"
                android:startColor="#000000"
                android:centerColor="#8D000000"
                android:endColor="#00FFFFFF">
            </gradient>
            <corners
                android:radius="35dp" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="14dp"
        android:right="14dp">
        <shape android:shape="rectangle">
            <gradient
                android:centerX="94%"
                android:angle="-90"
                android:startColor="#000000"
                android:centerColor="#A5A3A3"
                android:endColor="#FFFFFF">
            </gradient>
            <corners
                android:radius="15dp" />
        </shape>
    </item>
    <item
        android:bottom="23dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:radius="15dp" />
        </shape>
    </item>
</layer-list>