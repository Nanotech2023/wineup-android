<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/black_overlay">
    <item>
        <layer-list android:paddingBottom="22dp"
            android:paddingTop="14dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <item
                android:start="8dp"
                android:end="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="#22680E24"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
            <item
                android:start="8dp"
                android:end="8dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#680E24"/>
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <item
                android:bottom="10dp">
                <shape
                    android:shape="rectangle"
                    >
                    <solid android:color="#931332"/>
                    <corners android:radius="4dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>